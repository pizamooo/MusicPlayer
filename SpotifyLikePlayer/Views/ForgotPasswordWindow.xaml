<Window x:Class="SpotifyLikePlayer.Views.ForgotPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpotifyLikePlayer.Views"
		xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Reset password"
		WindowStartupLocation="CenterScreen"
		WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Width="380"
        Height="460"
        Closing="Window_Closing"
        Closed="Window_Closed">
	<Border x:Name="MainContainer"
            CornerRadius="12"
            Background="#2b2b2b"
            Padding="24"
            Margin="20"
            BorderBrush="#444"
            BorderThickness="1"
            RenderTransformOrigin="0.5,0.5">

		<Border.RenderTransform>
			<ScaleTransform ScaleX="0.9" ScaleY="0.9"/>
		</Border.RenderTransform>

		<Border.Effect>
			<DropShadowEffect BlurRadius="15" ShadowDepth="0" Color="Black" Opacity="0.6"/>
		</Border.Effect>

		<Grid Cursor="">

			<StackPanel Width="280"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Margin="0,24,0,0">

				<TextBlock Text="Сброс пароля"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,24"/>

				<TextBox x:Name="EmailTxt"
                         materialDesign:HintAssist.Hint="Email"
                         Height="44"
                         FontSize="14"
                         Background="#333"
                         Foreground="White"
                         BorderBrush="#555"
                         BorderThickness="1"
                         Padding="12,8"
                         Margin="0,0,0,12"
                         TextChanged="ClearErrorMessage"/>

				<PasswordBox x:Name="NewPasswordTxt"
                             materialDesign:HintAssist.Hint="Новый пароль (минимум 5 символов)"
                             Height="44"
                             FontSize="14"
                             Background="#333"
                             Foreground="White"
                             BorderBrush="#555"
                             BorderThickness="1"
                             Padding="12,8"
                             Margin="0,0,0,12"
                             PasswordChanged="ClearErrorMessage"/>

				<PasswordBox x:Name="ConfirmPasswordTxt"
                             materialDesign:HintAssist.Hint="Подтвердите пароль"
                             Height="44"
                             FontSize="14"
                             Background="#333"
                             Foreground="White"
                             BorderBrush="#555"
                             BorderThickness="1"
                             Padding="12,8"
                             Margin="0,0,0,16"
                             PasswordChanged="ClearErrorMessage"/>

				<TextBlock x:Name="ErrorMessage"
                           Foreground="#ff5555"
                           Margin="0,4,0,16"
                           Text=""
                           TextWrapping="Wrap"
                           FontSize="12"
                           HorizontalAlignment="Center"/>

				<Button Content="Сбросить пароль"
                        Height="44"
                        Background="#1DB954"
                        Foreground="White"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="ResetPassword_Click"
                        Margin="0,0,0,12"/>

				<Button Content="Вернуться ко входу"
                        Height="36"
                        Background="Transparent"
                        Foreground="#aaa"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="GoBackToLogin_Click"
                        HorizontalAlignment="Center"/>
			</StackPanel>
		</Grid>
	</Border>

	<Window.Triggers>
		<EventTrigger RoutedEvent="Window.Loaded">
			<BeginStoryboard>
				<Storyboard>
					<DoubleAnimation Storyboard.TargetProperty="Opacity"
                                     From="0" To="1" Duration="0:0:0.3"/>
					<DoubleAnimation Storyboard.TargetName="MainContainer"
                                     Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)"
                                     From="0.9" To="1" Duration="0:0:0.3"/>
					<DoubleAnimation Storyboard.TargetName="MainContainer"
                                     Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)"
                                     From="0.9" To="1" Duration="0:0:0.3"/>
				</Storyboard>
			</BeginStoryboard>
		</EventTrigger>
	</Window.Triggers>
</Window>
