<Window x:Class="SpotifyLikePlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpotifyLikePlayer"
		xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" xmlns:converters="clr-namespace:SpotifyLikePlayer.Converters"
		mc:Ignorable="d"
        Title="Player" Height="600" Width="860"
		DataContext="{Binding RelativeSource={RelativeSource Self}, Path=ViewModel}" WindowStartupLocation="CenterScreen">
	<Window.Resources>
		<converters:SecondsToTimeConverter x:Key="SecondsToTimeConverter" />
	</Window.Resources>
	<Grid Background="MediumPurple">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="200" />
			<!-- Sidebar -->
			<ColumnDefinition Width="*" />
			<!-- Main content -->
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="80" />
			<!-- Player controls -->
		</Grid.RowDefinitions>

		<!-- Sidebar: Navigation -->
		<StackPanel Grid.Column="0" Background="#121212">
			<Button Content="Home" Margin="5,5,5,5"/>
			<Button Content="Your Library" Margin="5,5,5,5"/>
			<ListBox ItemsSource="{Binding Playlists}" SelectedItem="{Binding SelectedPlaylist}" 
                     DisplayMemberPath="Name" Margin="5" SelectionChanged="Playlist_SelectionChanged" />
			<!-- Bind to playlists -->
		</StackPanel>

		<!-- Main Content: Search + Song List -->
		<Grid Grid.Column="1">
			<Grid.RowDefinitions>
				<RowDefinition Height="50" />
				<!-- Search bar height -->
				<RowDefinition Height="*" />
				<!-- Song list -->
			</Grid.RowDefinitions>

			<!-- Search Bar (компактный, сверху) -->
			<TextBox Grid.Row="0" materialDesign:HintAssist.Hint="Search" 
                     TextChanged="Search_TextChanged" 
                     Height="40" Margin="10,5,10,0" 
                     VerticalAlignment="Top" />

			<!-- Song List -->
			<ListView Grid.Row="1" Margin="5" ItemsSource="{Binding Songs}" SelectedItem="{Binding SelectedSong}">
				<ListView.View>
					<GridView>
						<GridViewColumn Header="">
							<GridViewColumn.CellTemplate>
								<DataTemplate>
									<Image Source="{Binding CoverImagePath}" Width="40" Height="40" />
								</DataTemplate>
							</GridViewColumn.CellTemplate>
						</GridViewColumn>
						<GridViewColumn Header="Title" DisplayMemberBinding="{Binding Title}" />
						<GridViewColumn Header="Artist" DisplayMemberBinding="{Binding Artist.Name}" />
						<GridViewColumn Header="Album" DisplayMemberBinding="{Binding Album.Title}" />
						<GridViewColumn Header="Duration">
							<GridViewColumn.CellTemplate>
								<DataTemplate>
									<materialDesign:PackIcon Kind="Clock" Width="16" Height="16" Foreground="White" />
								</DataTemplate>
							</GridViewColumn.CellTemplate>
						</GridViewColumn>
					</GridView>
				</ListView.View>
			</ListView>
		</Grid>

		<!-- Player Controls -->
		<materialDesign:Card Grid.Row="1" Grid.ColumnSpan="2" Background="#181818">
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="Auto" />
					<!-- Song info -->
					<ColumnDefinition Width="*" />
					<!-- Controls and progress slider -->
					<ColumnDefinition Width="Auto" />
					<!-- Volume slider -->
				</Grid.ColumnDefinitions>
				
				<!-- Song info -->
				<StackPanel Grid.Column="0" Orientation="Vertical" Margin="10" VerticalAlignment="Center" MaxWidth="250">
					<Image Source="{Binding PlayerService.CurrentSong.CoverImagePath}" Width="100" Height="100" Margin="0,0,0,10" />
					<TextBlock Text="{Binding PlayerService.CurrentSong.Title}" Foreground="White" FontWeight="Bold" FontSize="18" TextWrapping="Wrap" TextTrimming="CharacterEllipsis" Cursor="" />
					<TextBlock Text="{Binding PlayerService.CurrentSong.Artist.Name}" Foreground="LimeGreen" FontSize="16" FontWeight="SemiBold" TextWrapping="Wrap" TextTrimming="CharacterEllipsis" />
					<TextBlock Text="{Binding PlayerService.CurrentSong.Album.Title}" Foreground="LimeGreen" FontSize="16" FontWeight="SemiBold" TextWrapping="Wrap" TextTrimming="CharacterEllipsis" />
				</StackPanel>

				<!-- Buttons and Progress Slider -->
				<StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
					<Button Command="{Binding PreviousCommand}" Margin="5">
						<materialDesign:PackIcon Kind="SkipPrevious" Width="24" Height="24" Foreground="White" />
					</Button>
					<!-- Единая кнопка Play/Pause с триггером для смены иконки -->
					<Button Command="{Binding TogglePlayPauseCommand}" Margin="5">
						<Button.Style>
							<Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
								<Setter Property="Content">
									<Setter.Value>
										<materialDesign:PackIcon Kind="Play" Width="24" Height="24" Foreground="White" />
									</Setter.Value>
								</Setter>
								<Style.Triggers>
									<DataTrigger Binding="{Binding PlayerService.IsPlaying}" Value="True">
										<Setter Property="Content">
											<Setter.Value>
												<materialDesign:PackIcon Kind="Pause" Width="24" Height="24" Foreground="White" />
											</Setter.Value>
										</Setter>
									</DataTrigger>
								</Style.Triggers>
							</Style>
						</Button.Style>
					</Button>
					<Button Command="{Binding NextCommand}" Margin="5">
						<materialDesign:PackIcon Kind="SkipNext" Width="24" Height="24" Foreground="White" />
					</Button>
					<!-- Новое: Отсчёт времени (Position / Duration) -->
					<TextBlock Margin="5" VerticalAlignment="Center" Foreground="White" FontSize="14">
						<TextBlock.Text>
							<MultiBinding Converter="{StaticResource SecondsToTimeConverter}">
                                <Binding Path="PlayerService.PositionInSeconds" />
                                <Binding Path="PlayerService.DurationInSeconds" />
                            </MultiBinding>
						</TextBlock.Text>
					</TextBlock>
					
					<!-- Progress Slider -->
					<Slider x:Name="ProgressSlider" Value="{Binding PlayerService.PositionInSeconds, Mode=TwoWay}"
                            Minimum="0" Maximum="{Binding PlayerService.DurationInSeconds}"
                            Width="300" Margin="5" VerticalAlignment="Center" MouseMove="ProgressSlider_MouseMove"/>
				</StackPanel>

				<!-- Volume Slider (короткий, справа) -->
				<StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10">
					<materialDesign:PackIcon Kind="VolumeHigh" VerticalAlignment="Center" Margin="5" Foreground="White" Width="20" Height="20" Cursor=""/>
					<Slider Value="{Binding PlayerService.Volume, Mode=TwoWay}" 
                            Minimum="0" Maximum="1" 
                            Width="100" Margin="5" VerticalAlignment="Center"/>
				</StackPanel>
			</Grid>
		</materialDesign:Card>
	</Grid>
</Window>
