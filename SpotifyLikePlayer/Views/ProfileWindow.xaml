<Window x:Class="SpotifyLikePlayer.Views.ProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:SpotifyLikePlayer.Views"
        mc:Ignorable="d"
        Title="Профиль"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Width="500"
		Height="760">
	<Border x:Name="MainContainer"
            CornerRadius="12"
            Background="#2b2b2b"
            Padding="20"
            Margin="20"
            BorderBrush="#444"
            BorderThickness="1"
            RenderTransformOrigin="0.5,0.5">

		<Border.RenderTransform>
			<ScaleTransform ScaleX="0.9" ScaleY="0.9"/>
		</Border.RenderTransform>

		<Border.Effect>
			<DropShadowEffect BlurRadius="15" ShadowDepth="0" Color="Black" Opacity="0.6"/>
		</Border.Effect>

		<StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="340" Cursor="">

			<TextBlock Text="Редактирование профиля"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

			<StackPanel HorizontalAlignment="Center" Margin="0,10">
				<Border Width="140"
            Height="140"
            CornerRadius="70"
            BorderBrush="#555"
            BorderThickness="2"
            Background="#222"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            ClipToBounds="True">

					<Image x:Name="ProfileImage"
       Stretch="UniformToFill"
       RenderOptions.BitmapScalingMode="HighQuality"
       HorizontalAlignment="Center"
       VerticalAlignment="Center"
       SnapsToDevicePixels="True"
       Width="140" Height="140">
						<Image.Clip>
							<EllipseGeometry Center="70,70" RadiusX="70" RadiusY="70"/>
						</Image.Clip>
					</Image>
				</Border>

				<Button Content="Изменить фото"
            Click="ChangePhoto_Click"
            Margin="0,12,0,0"
            Padding="12,6"
            Background="#444"
            Foreground="White"
            BorderThickness="0"
            Cursor="Hand"
            Width="135"
            Height="32"
            HorizontalAlignment="Center"/>
			</StackPanel>


			<StackPanel Margin="0,25,0,0" HorizontalAlignment="Stretch">

				<!-- Имя пользователя -->
				<StackPanel Orientation="Horizontal" Margin="0,0,0,12" VerticalAlignment="Center">
					<TextBlock Text="Логин:"
                               Width="115"
                               Foreground="#ccc"
                               VerticalAlignment="Center"
                               FontSize="14"
							   Margin="0,0,10,0"/>
					<TextBox x:Name="UsernameBox"
                             Height="35"
                             Width="202"
                             FontSize="14"
                             Background="#333"
                             Foreground="White"
                             BorderBrush="#555"
                             BorderThickness="1"
                             materialDesign:HintAssist.Hint=" Имя пользователя"/>
				</StackPanel>

				<!-- Email -->
				<StackPanel Orientation="Horizontal" Margin="0,0,0,12" VerticalAlignment="Center">
					<TextBlock Text="Email:"
                               Width="115"
                               Foreground="#ccc"
                               VerticalAlignment="Center"
                               FontSize="14"
							   Margin="0,0,10,0"/>
					<TextBox x:Name="EmailBox"
                             Height="35"
                             Width="202"
                             FontSize="14"
                             Background="#333"
                             Foreground="White"
                             BorderBrush="#555"
                             BorderThickness="1"/>
				</StackPanel>

				<!-- Пароль -->
				<StackPanel Orientation="Horizontal" Margin="0,0,0,12" VerticalAlignment="Center">
					<TextBlock Text="Изменить пароль:"
                               Width="115"
                               Foreground="#ccc"
                               VerticalAlignment="Center"
                               FontSize="14"
							   Margin="0,0,10,0"/>
					<PasswordBox x:Name="PasswordBox"
                                 Height="35"
                                 Width="202"
                                 FontSize="14"
                                 Background="#333"
                                 Foreground="White"
                                 BorderBrush="#555"
                                 BorderThickness="1"/>
				</StackPanel>

				<!-- Подтверждение -->
				<StackPanel Orientation="Horizontal" Margin="0,0,0,20" VerticalAlignment="Center">
					<TextBlock Text="Подтверждение:"
                               Width="115"
                               Foreground="#ccc"
                               VerticalAlignment="Center"
                               FontSize="14"
							   Margin="0,0,10,0"/>
					<PasswordBox x:Name="ConfirmPasswordBox"
                                 Height="35"
                                 Width="202"
                                 FontSize="14"
                                 Background="#333"
                                 Foreground="White"
                                 BorderBrush="#555"
                                 BorderThickness="1"/>
				</StackPanel>
			</StackPanel>

			<Button Content="Сохранить"
                    Height="40"
                    Background="#5c3d91"
                    Foreground="White"
                    FontWeight="SemiBold"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="SaveButton_Click"
                    Margin="0,0,0,6"/>

			<Button Content="Добавить свою музыку"
        Height="40"
        Background="#1DB954"
        Foreground="White"
        FontWeight="SemiBold"
        BorderThickness="0"
        Cursor="Hand"
        Click="SubmitMusicRequest_Click"
        Margin="0,10,0,6"
        Visibility="{Binding IsUser, Converter={StaticResource BoolToVisibilityConverter}}"/>

			<Button Content="Админ-панель"
        Height="40"
        Background="#6C63FF"
        Foreground="White"
        FontWeight="SemiBold"
        BorderThickness="0"
        Cursor="Hand"
        Click="OpenAdminPanel_Click"
        Margin="0,6,0,10"
        Visibility="{Binding IsAdmin, Converter={StaticResource BoolToVisibilityConverter}}"/>

			<Button Content="Отмена"
                    Height="35"
                    Background="#444"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="CancelButton_Click"/>
		</StackPanel>
	</Border>

	<Window.Triggers>
		<EventTrigger RoutedEvent="Window.Loaded">
			<BeginStoryboard>
				<Storyboard>
					<DoubleAnimation Storyboard.TargetProperty="Opacity"
                                     From="0" To="1" Duration="0:0:0.3"/>
					<DoubleAnimation Storyboard.TargetName="MainContainer"
                                     Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)"
                                     From="0.9" To="1" Duration="0:0:0.3"/>
					<DoubleAnimation Storyboard.TargetName="MainContainer"
                                     Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)"
                                     From="0.9" To="1" Duration="0:0:0.3"/>
				</Storyboard>
			</BeginStoryboard>
		</EventTrigger>
	</Window.Triggers>
</Window>
