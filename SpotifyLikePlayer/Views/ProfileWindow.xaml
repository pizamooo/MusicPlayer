<Window x:Class="SpotifyLikePlayer.Views.ProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:SpotifyLikePlayer.Views"
        mc:Ignorable="d"
        Title="Профиль"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Width="450"
		Height="620">
	<Border x:Name="MainContainer"
            CornerRadius="12"
            Background="#2b2b2b"
            Padding="20"
            Margin="20"
            BorderBrush="#444"
            BorderThickness="1"
            RenderTransformOrigin="0.5,0.5">

		<Border.RenderTransform>
			<ScaleTransform ScaleX="0.9" ScaleY="0.9"/>
		</Border.RenderTransform>

		<Border.Effect>
			<DropShadowEffect BlurRadius="15" ShadowDepth="0" Color="Black" Opacity="0.6"/>
		</Border.Effect>

		<StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="320" Cursor="">

			<TextBlock Text="Редактирование профиля"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

			<StackPanel HorizontalAlignment="Center" Margin="0,10">
				<Border Width="140"
            Height="140"
            CornerRadius="70"
            BorderBrush="#555"
            BorderThickness="2"
            Background="#222"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            ClipToBounds="True">

					<Image x:Name="ProfileImage"
       Stretch="UniformToFill"
       RenderOptions.BitmapScalingMode="HighQuality"
       HorizontalAlignment="Center"
       VerticalAlignment="Center"
       SnapsToDevicePixels="True"
       Width="140" Height="140">
						<Image.Clip>
							<EllipseGeometry Center="70,70" RadiusX="70" RadiusY="70"/>
						</Image.Clip>
					</Image>
				</Border>

				<Button Content="Изменить фото"
            Click="ChangePhoto_Click"
            Margin="0,12,0,0"
            Padding="12,6"
            Background="#444"
            Foreground="White"
            BorderThickness="0"
            Cursor="Hand"
            Width="135"
            Height="32"
            HorizontalAlignment="Center"/>
			</StackPanel>


			<TextBox x:Name="UsernameBox"
                     Height="35" Margin="0,0,0,10"
                     FontSize="14"
                     Background="#333" Foreground="White"
                     BorderBrush="#555" BorderThickness="1"
                     materialDesign:HintAssist.Hint="Имя пользователя"/>

			<TextBox x:Name="EmailBox"
                     Height="35" Margin="0,0,0,10"
                     FontSize="14"
                     Background="#333" Foreground="White"
                     BorderBrush="#555" BorderThickness="1"
                     materialDesign:HintAssist.Hint="Email"/>

			<PasswordBox x:Name="PasswordBox"
                         Height="35" Margin="0,0,0,10"
                         FontSize="14"
                         Background="#333" Foreground="White"
                         BorderBrush="#555" BorderThickness="1"
                         materialDesign:HintAssist.Hint="Новый пароль"/>

			<PasswordBox x:Name="ConfirmPasswordBox"
                         Height="35" Margin="0,0,0,20"
                         FontSize="14"
                         Background="#333" Foreground="White"
                         BorderBrush="#555" BorderThickness="1"
                         materialDesign:HintAssist.Hint="Подтвердите пароль"/>

			<Button Content="Сохранить"
                    Height="40"
                    Background="#5c3d91"
                    Foreground="White"
                    FontWeight="SemiBold"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="SaveButton_Click"
                    Margin="0,0,0,10"/>

			<Button Content="Отмена"
                    Height="35"
                    Background="#444"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="CancelButton_Click"/>
		</StackPanel>
	</Border>

	<Window.Triggers>
		<EventTrigger RoutedEvent="Window.Loaded">
			<BeginStoryboard>
				<Storyboard>
					<DoubleAnimation Storyboard.TargetProperty="Opacity"
                                     From="0" To="1" Duration="0:0:0.3"/>
					<DoubleAnimation Storyboard.TargetName="MainContainer"
                                     Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)"
                                     From="0.9" To="1" Duration="0:0:0.3"/>
					<DoubleAnimation Storyboard.TargetName="MainContainer"
                                     Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)"
                                     From="0.9" To="1" Duration="0:0:0.3"/>
				</Storyboard>
			</BeginStoryboard>
		</EventTrigger>
	</Window.Triggers>
</Window>
