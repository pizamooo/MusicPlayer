<Window x:Class="SpotifyLikePlayer.Views.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpotifyLikePlayer.Views"
		xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" xmlns:services="clr-namespace:SpotifyLikePlayer.Services" d:DataContext="{d:DesignInstance Type=services:MediaPlayerService}"
		mc:Ignorable="d"
        Title="Register" Height="400" Width="320" WindowStartupLocation="CenterScreen">
	<Grid Background="#121212">
		<StackPanel Margin="20">
			<TextBox x:Name="UsernameTxt" materialDesign:HintAssist.Hint="Username" 
                     Margin="0,10" Foreground="White" Background="#282828" TextChanged="ClearErrorMessage"/>
			<TextBox x:Name="EmailTxt" materialDesign:HintAssist.Hint="Email" 
                     Margin="0,10" Foreground="White" Background="#282828" TextChanged="ClearErrorMessage"/>
			<PasswordBox x:Name="PasswordTxt" materialDesign:HintAssist.Hint="Password (минимум 5 символов)" 
                         Margin="0,10" Foreground="White" Background="#282828" PasswordChanged="ClearErrorMessage"/>
			<PasswordBox x:Name="ConfirmPasswordTxt" materialDesign:HintAssist.Hint="Confirm Password" 
                         Margin="0,10" Foreground="White" Background="#282828" PasswordChanged="ClearErrorMessage"/>
			<TextBlock x:Name="ErrorMessage" Foreground="Red" Margin="0,5,0,10" 
                       Text="" TextWrapping="Wrap" FontSize="12" Padding="5" />
			<Button Content="Register" Click="Register_Click" Margin="0,10" 
                    Background="#1DB954" Foreground="White"/>
		</StackPanel>
	</Grid>
</Window>
